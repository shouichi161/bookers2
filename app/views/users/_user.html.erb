<div class="col-4">
      <div class="m-3">
        <h2>User info</h2>
        <%=image_tag user.get_profile_image(100,100) %>
        <table class="border-top">
        <tr class="border-top"><th class="p-2">name</th><td class="p-3"><%= user.name %></td></tr>
        <tr class="border-top"><th class="p-2">introduction</th><td class="p-3"><%= user.introduction %></td></tr>
        </table>
      </div>

      <div>
        <%=link_to edit_user_path(user.id),class:"btn btn-outline-secondary btn-block mt-4" do %>
          <i class="fas fa-user-edit"></i>
        <% end %>
      </div>

      <div class="m-3">
        <h2>New book</h2>
        <%= form_with model:book do |f| %>
        <%= f.label:title %><br><%= f.text_field:title,class:"border border-muted" %><br>
        <%= f.label:opinion,class:"mt-3" %><br><%= f.text_area:body,class:"border border-muted" %><br>
        <%= f.submit'Create Book',class:"btn btn-success mt-2" %>
        <% end %>

      </div>
    </div>