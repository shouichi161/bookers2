<div class="container mt-3">
  <div class="row">
    <%=render'books/book',book:@book %>
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>Users</h2>
        <table class="border-top table">
          <thead>
            <tr class="border-bottom">
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-top">
              <td><%=image_tag current_user.get_profile_image(80,80) %></td>
              <td><%=current_user.name %></td>
              <td><%=link_to "Show",user_path(current_user.id) %></td>
            </tr>

            <% @users.each do |user| %>
              <% unless user==current_user %>
              <tr class="border-top">
                <td><%=image_tag user.get_profile_image(80,80) %></td>
                <td><%=user.name %></td>
                <td><%=link_to "Show",user_path(user.id) %></td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
