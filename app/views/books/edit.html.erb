<div class="container p-3">
  <div class="row">
    <div class="col">
      <h1>Editing Book</h1>

      <div class="mt-2">
        <% if @book.errors.any? %>
          <h2><%=@book.errors.count %> errors prohibited this obj from being saved</h2>
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        <% end %>
      </div>

      <%= form_with model:@book do |f| %>

      <p>Title</p>
      <%= f.text_field:title,class:"border border-muted w-50 rounded" %>

      <p class="mt-3">Opinion</p>
      <%= f.text_area:body,class:"border border-muted w-50 rounded" %><br>
      <%= f.submit"Update Book",class:"btn btn-success mt-2" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Show",book_path(@book.id) %> | <%= link_to"Back",'/books' %>
      </div>
    </div>
  </div>
</div>