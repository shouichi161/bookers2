<div class="container p-3">
  <div class="row">
    <div class="col">
      <div>
        <h2>User info</h2>
        
        <p>name <%=current_user.name %></p>
        <p>introduction <%= current_user.introduction %></p>
      </div>

      <div>
        <%=link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary" do %>
          <i class="fas fa-user-edit"></i>
        <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model:@book do |f| %>
        <%= f.label:title %><br><%= f.text_field:title %><br>
        <%= f.label:opinion %><br><%= f.text_area:body %><br>
        <%= f.submit'Create Book',class:"btn btn-success" %>
        <% end %>

      </div>
    </div>
    <div class="col">
      <div>
        <h2>Books</h2>
      </div>
    </div>
  </div>
</div>




