<div class="p-3 ml-5">
  <% if @book.errors.any? %>
    <h2><%=@book.errors.count %> error prohibited this obj from being saved</h2>
    <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
    <% end %>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <%=render"book",book:@book %>
    <div class="col-8">
      <div class="m-3">
        <h2>Books</h2>
        <table class="border-top table table-hover">
          <thead>
            <tr>
              <th class="border-bottom"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr class="border-top">
              <td><%=link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(80,80)%>
              <% end %></td>

              <td><%=link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %></td>

              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>




